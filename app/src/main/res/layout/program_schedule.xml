<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    a:id="@+id/drawer_layout"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:fitsSystemWindows="true"
    tools:openDrawer="start">
    <android.support.design.widget.CoordinatorLayout xmlns:a="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        a:fitsSystemWindows="true"
        tools:context=".activity.ProgramListActivity">

        <android.support.design.widget.AppBarLayout
            a:layout_height="wrap_content"
            a:layout_width="match_parent"
            a:theme="@style/AppTheme.AppBarOverlay">

            <LinearLayout
                a:layout_width="wrap_content"
                a:layout_height="wrap_content">
                <Button
                    a:id="@+id/toolbar_btn_back"
                    a:drawableTop="@drawable/ic_undo_black_24dp"
                    a:background="?attr/colorPrimary"
                    a:layout_height="wrap_content"
                    a:layout_width="wrap_content"
                    a:layout_marginTop="7dp"
                    a:paddingTop="10dp"/>

                <android.support.v7.widget.Toolbar
                    a:id="@+id/toolbar"
                    a:layout_width="match_parent"
                    a:layout_height="?attr/actionBarSize"
                    a:background="?attr/colorPrimary"
                    a:title="@string/app_name"
                    app:popupTheme="@style/AppTheme.PopupOverlay">
                </android.support.v7.widget.Toolbar>
            </LinearLayout>

        </android.support.design.widget.AppBarLayout>


        <RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:paddingBottom="@dimen/activity_vertical_margin"
            a:paddingLeft="@dimen/activity_horizontal_margin"
            a:paddingRight="@dimen/activity_horizontal_margin"
            a:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <HorizontalScrollView
                a:id="@+id/scrool_view_date_list"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content">
                <LinearLayout
                    a:id="@+id/btn_dates_layout"
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:orientation="horizontal"
                    a:paddingBottom="5dp">

                    <Button
                        a:id="@+id/day1"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                    <Button
                        a:id="@+id/day2"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                    <Button
                        a:id="@+id/day3"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                    <Button
                        a:id="@+id/day4"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                    <Button
                        a:id="@+id/day5"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                    <Button
                        a:id="@+id/day6"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                    <Button
                        a:id="@+id/day7"
                        a:background="@drawable/button_normal"
                        a:layout_height="wrap_content"
                        a:layout_width="wrap_content"
                        a:textColor="@color/colorPrimary"
                        a:padding="5dp"/>
                </LinearLayout>
            </HorizontalScrollView>
            <ListView
                a:id="@android:id/list"
                a:layout_width="match_parent"
                a:layout_height="match_parent"
                a:layout_below="@id/scrool_view_date_list"
                a:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        a:id="@+id/nav_view"
        a:layout_width="wrap_content"
        a:layout_height="match_parent"
        a:layout_gravity="start"
        a:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/context_menu"/>

</android.support.v4.widget.DrawerLayout>



